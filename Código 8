pista = int(input("Quantos metros tem a pista? "))
corrida = int(input("Quantos metros você correu? "))

if pista >= 1:
    if corrida >=1:
        fim_do_percurso = corrida % pista
        print("A garrefa está em", fim_do_percurso, "metros.")
    
    else:
        print("Insira uma quantidade em metros válida")
else:
    print("Insira uma quantidade em metros válida")
