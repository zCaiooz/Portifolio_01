try:
    Competidores = int(input("Quantos competidores terá a competição? "))
    Folhas = int(input("Quantas folhas foram compradas? "))

    if Competidores >= 2:
        if Folhas >= 4:
            Divisão = Folhas // Competidores
            if Folhas < Competidores:
                print("Folhas insuficientes")
                
            else:    
                print ("Cada participante deve receber", Divisão, "folha(s), sobrando", Folhas % Competidores, "folha(s).")
                
        else:
            print("Número de folhas insuficiente")
    else:
        print("Insira uma quantidade válida de competidores")
        
except ValueError:
    print("Apenas números inteiros")
