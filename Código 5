def prioridade(valor_pedido: int, dias_para_entregar: int):
    if valor_pedido < 20:
        print("Pedido muito barato, por favor insira um valor válido.")
    
    elif valor_pedido > 500 or dias_para_entregar <= 3:
        print("urgente")
        
    elif 100 < valor_pedido <= 500 or 4 <= dias_para_entregar <= 6:
        print("prioritário")
        
    else:
        print("normal")
        
try:
    valor = int(input("Qual o valor do seu pedido? "))
    dias = int(input("Quantos dias deseja para a entrega? "))

    prioridade(valor, dias)

except ValueError:
    print("Por favor, insira apenas números válidos.")
